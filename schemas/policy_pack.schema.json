{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/policy_pack.schema.json",
  "title": "PolicyPack",
  "type": "object",
  "required": [
    "access",
    "quality_gates",
    "retention",
    "evaluation_points"
  ],
  "properties": {
    "access": {
      "type": "object",
      "properties": {
        "allow_roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deny_roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "row_level_policies": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "expression"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "expression": {
                "type": "string",
                "description": "SQL/ABAC predicate"
              }
            }
          }
        },
        "column_masks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "column",
              "masking_expression"
            ],
            "properties": {
              "column": {
                "type": "string"
              },
              "masking_expression": {
                "type": "string"
              },
              "applies_to_roles": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "quality_gates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "not_null",
              "unique",
              "regex",
              "range",
              "freshness",
              "row_count_change"
            ]
          },
          "column": {
            "type": "string"
          },
          "pattern": {
            "type": "string"
          },
          "min": {
            "type": "number"
          },
          "max": {
            "type": "number"
          },
          "max_delay": {
            "type": "string",
            "pattern": "^\\d+[smhd]$"
          },
          "tolerance_pct": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "severity": {
            "type": "string",
            "enum": [
              "warn",
              "error"
            ],
            "default": "error"
          }
        },
        "additionalProperties": false
      }
    },
    "retention": {
      "type": "object",
      "required": [
        "mode",
        "duration"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "delete",
            "archive"
          ]
        },
        "duration": {
          "type": "string",
          "pattern": "^\\d+[dmy]$"
        }
      }
    },
    "evaluation_points": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "design",
          "ci",
          "runtime"
        ]
      }
    }
  },
  "additionalProperties": false
}